# /usr/lib/systemd/system/
[Unit]
Description=run-ec2-userdata
After=network.target systemd-networkd.service amazon-ssm-agent.service docker.service kubelet.service fetch-userdata.service
Wants=local-fs.target sshd.service sshd-keygen.service amazon-ssm-agent.service docker.service kubelet.service

[Service]
Type=oneshot
ExecStart=/usr/bin/run-ec2-userdata
RemainAfterExit=yes
TimeoutSec=0

# Output needs to appear in instance console output
StandardOutput=journal+console

[Install]
WantedBy=multi-user.target
